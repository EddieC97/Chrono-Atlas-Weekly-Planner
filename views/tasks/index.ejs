<%- include('../partials/header') %>

<h2>All Tasks</h2>


<ol>
    <h3>2nd Brain Tasks:</h3>
    <% for (const task of secondBrain) { %>
        <li>
            <a href="/task/<%= task.id %>">
                <h4>Title: <%= task.title %></h4>
                <h3>Description: 
                    <% for (const description of task.description) { %> 
                    <%=description.type %> 
                    <% } %>
                </h3>
                <h3>Category: <%= task.category %></h3>
            </a>
        

        </li>
    <% } %>
</ol>

<ol>
    <h3>Weekly Tasks:</h3>
    <% for (const task of weeklyTask) { %> 
        <li>
            <a href="/task/<%= task.id %>">
                <h4>Title: <%= task.title %></h4>
                <h3>Description: 
                    <% for (const description of task.description) { %> 
                    <%=description.type %> 
                    <% } %>
                </h3>
                <h3>Category: <%= task.category %></h3>
            </a>
        </li>
    <% } %>
    
</ol>





