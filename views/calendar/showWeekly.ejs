<table>
    <thead>
        <th>
            <a href='/calendars/day/Monday/<%= week.id %>'> Monday</a>
            <div id="monday-date"> <%= formatDates.formatMonday %></div></th>
        <th>
            <a href='/calendars/day/Tuesday/<%= week.id %>'> Tuesday</a>
            <div id="tuesday-date"><%= formatDates.formatTuesday %></div></th>
        <th>
            <a href='/calendars/day/Wednesday/<%= week.id %>'> Wednesday</a>
            <div id="wednesday-date"><%= formatDates.formatWednesday %></div></th>
