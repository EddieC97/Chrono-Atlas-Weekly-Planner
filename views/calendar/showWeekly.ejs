                    <% for( task of tasksByDay.Monday) { %>
                        <li>
                            <%=  task.title %>      
                        </li>
                    <% } %>
                </ol>
            </td>
            <td id="tuesday">
                <ol>
                    <% for (task of tasksByDay.Tuesday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                    <% } %>
                </ol>
            </td>
            <td id="wednesday">
                <ol>
                    <% for( task of tasksByDay.Wednesday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                        <% } %>
                </ol>
            </td>
            <td id="thursday">
                <ol>
                    <% for( task of tasksByDay.Thursday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                        <% } %>
                </ol>
                
            </td>
            <td id="friday">
                <ol>
                    <% for( task of tasksByDay.Friday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                        <% } %>
                </ol>
            </td>
            <td id="saturday">
                <ol>
                    <% for( task of tasksByDay.Saturday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                        <% } %>
                </ol>
            </td>
            <td id="sunday">
                <ol>
                    <% for( task of tasksByDay.Friday) { %>
                        <li>
                            <%= task.title %>
                        </li>
                        <% } %>
                </ol>
            </td>
        </div>
    </tr>
</tbody>
</table>

